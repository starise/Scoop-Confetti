        },
        "32bit": {
            "url": [
                "https://archive.mozilla.org/pub/firefox/releases/132.0.2/win32/it/Firefox%20Setup%20132.0.2.exe#/dl.7z",
                "https://raw.githubusercontent.com/starise/scoop-confetti/master/scripts/firefox-policies.json#/policies.json"
