        "32bit": {
            "url": [
                "https://archive.mozilla.org/pub/firefox/releases/123.0.1/win32/it/Firefox%20Setup%20123.0.1.exe#/dl.7z",
                "https://raw.githubusercontent.com/starise/scoop-confetti/master/scripts/firefox-policies.json#/policies.json"
