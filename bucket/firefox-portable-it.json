        },
        "32bit": {
            "url": [
                "https://archive.mozilla.org/pub/firefox/releases/128.0.3/win32/it/Firefox%20Setup%20128.0.3.exe#/dl.7z",
                "https://raw.githubusercontent.com/starise/scoop-confetti/master/scripts/firefox-policies.json#/policies.json"
